<Window x:Class="AlgorithmLab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgorithmLab1"
        
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
<!-- -->
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Grid.ColumnSpan="4" VerticalAlignment="Center">            
            <lvc:CartesianChart 
                Series="{Binding Series}"
                x:Name="Chart"
                ZoomMode="Both"
                Width="1200" Height="450"
            />
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="0" >
            <Button x:Name="Run_btn1" Width="200" Height="50" Margin="6"  Content="Run TEST" FontSize="36" Command="{Binding Run1Command}" Click="Run_btn1_Click" />
            <Button x:Name="Run_btn2" Width="200" Height="50" Margin="6"  Content="button templates" FontSize="24" Command="{Binding Run2Command}"/>
            <Button x:Name="Run_btn3" Width="200" Height="50" Margin="6"  Content="Template" FontSize="36" Command="{Binding Run3Command}"/>
            <Button x:Name="Run_btn4" Width="200" Height="50" Margin="6"  Content="Template" FontSize="36" Command="{Binding Run4Command}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" >
            <Button x:Name="Run_btn5" Width="200" Height="50" Margin="6"  Content="Template" FontSize="36" Command="{Binding Run5Command}"/>
            <Button x:Name="Run_btn6" Width="200" Height="50" Margin="6"  Content="Template" FontSize="36" Command="{Binding Run6Command}"/>
            <Button x:Name="Run_btn7" Width="200" Height="50" Margin="6"  Content="Template" FontSize="36" Command="{Binding Run7Command}"/>
            <Button x:Name="Run_btn8" Width="200" Height="50" Margin="6"  Content="Template" FontSize="36" Command="{Binding Run8Command}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2">

            <Button x:Name="Run_btn9" Width="200" Height="50" Margin="6"  Content="Template" FontSize="36" Command="{Binding Run9Command}"/>
            <Button x:Name="Run_btn10" Width="200" Height="50" Margin="6"  Content="Template" FontSize="36" Command="{Binding Run10Command}"/>
            <Button x:Name="Run_btn11" Width="200" Height="50" Margin="6"  Content="Template" FontSize="36" Command="{Binding Run11Command}"/>
            <Button x:Name="Run_btn12" Width="200" Height="50" Margin="6"  Content="Template" FontSize="36" Command="{Binding Run12Command}"/>

        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="3">
            <Button Margin="6" Command="{Binding AddCommand}">TEST Add (5,5)</Button>
            <Button Margin="6" Command="{Binding UITestCommand}">Run UI Test</Button>
            <Button x:Name="Clear_btn" Margin="6" Command="{Binding ClearCommand}" Click="Clear_btn_Click">Clear</Button>
            
            <TextBox x:Name="txtBox1" Height="171" Width="294" />
        </StackPanel>
    </Grid>
    
</Window>
